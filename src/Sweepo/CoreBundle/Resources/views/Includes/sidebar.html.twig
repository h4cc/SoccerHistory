{% set paths = app.request.pathInfo|split('/') %}
<div id="sidebar">
    <ul>
        <li>
            <a href="{{ url('timeline') }}">
                <i class="icon icon-time icon-2x"></i>
            </a>
            {% for path in paths %}
                {% if path == 'timeline' %}
                    <span id="light_sidebar"></span>
                {% endif %}
            {% endfor %}
        </li>
        <li>
            <a href="{{ url('bets') }}">
                <i class="icon icon-list icon-2x"></i>
            </a>
            {% for path in paths %}
                {% if path == 'bets' %}
                    <span id="light_sidebar"></span>
                {% endif %}
            {% endfor %}
        </li>
        <li>
            <a href="#">
                <i class="icon icon-user icon-2x"></i>
            </a>
            {% for path in paths %}
                {% if path == 'account' %}
                    <span id="light_sidebar"></span>
                {% endif %}
            {% endfor %}
        </li>
    </ul>
</div>