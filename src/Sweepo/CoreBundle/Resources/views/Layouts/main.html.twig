<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">

        {% stylesheets
            '@SweepoCoreBundle/Resources/public/components/bootstrap/less/bootstrap.less'
            '@SweepoCoreBundle/Resources/public/css/app.less'
            filter='less,?yui_css'
        %}

            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        {% block stylesheets %}{% endblock %}

    </head>
    <body>

        {% include "SweepoCoreBundle:Includes:nav.html.twig" %}

        <div id="main">

            {% for flashMessage in app.session.flashbag.get('info') %}
                <div class="flash alert alert-info">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <h4>Informations!</h4>
                    {{ flashMessage }}
                </div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="flash alert alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <h4>Congratulations!</h4>
                    {{ flashMessage }}
                </div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="flash alert alert-error">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <h4>Warning!</h4>
                    {{ flashMessage }}
                </div>
            {% endfor %}

            <div id="container">
                {% block container %}{% endblock %}
            </div>
        </div>

    {% javascripts
        'bundles/fosjsrouting/js/router.js'
        '@SweepoCoreBundle/Resources/public/components/jquery/jquery.min.js'
        '@SweepoCoreBundle/Resources/public/components/bootstrap/js/bootstrap-alert.js'
        filter='yui_js'
    %}

        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

    {% block javascript %}{% endblock %}

    </script>
    </body>
</html>
